<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-2">

            <div class="col-6 offset-3">
                <br>
                <h3 class="heading">Login</h3>

                <form method="POST" action="/login" novalidate class="needs-validation">
                    <div class="mb-4 mt-4">
                        <label for="username" class="form-label">Username</label>
                        <input name="username" id="username" type="text" class="form-control custom-outline" required>
                        
                    </div>

                   

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" id="password" type="password" class="form-control custom-outline"
                            required>
                        

                    </div>
                    <div class="text-center">
                        <button class="btn btn-outline-danger mt-3 btn-lg ">Login</button>
                    </div>
                    
                </form>
            </div>

        </div>

    </body>










